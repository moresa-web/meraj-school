# Production Environment Variables for Meraj School API
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/meraj-school

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-production
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_USER=info@merajfutureschool.ir
EMAIL_PASS=your-email-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3004

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379

# API Configuration
API_URL=http://localhost:5000
SITE_URL=http://localhost:5173
ADMIN_URL=http://localhost:3004

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# HuggingFace API (for AI features)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# SSL Configuration (if using reverse proxy)
TRUST_PROXY=true 