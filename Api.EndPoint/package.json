{
  "name": "meraj-school-api",
  "version": "1.0.0",
  "description": "API for Meraj School",
  "main": "dist/app.js",
  "scripts": {
    "start": "node --expose-gc dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "build:prod": "tsc && npm run clean",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed:faq": "ts-node src/scripts/seedFAQs.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:content": "ts-node src/scripts/seedContent.ts",
    "seed:classes": "ts-node src/scripts/seedClasses.ts",
    "seed:news": "ts-node src/scripts/seedNews.ts",
    "add:news": "ts-node src/scripts/addNews.ts",
    "add:content": "ts-node src/scripts/addMissingContent.ts",
    "update:seo": "ts-node src/scripts/updateSEO.ts",
    "pm2:start": "pm2 start ecosystem.config.js --only meraj-api",
    "pm2:stop": "pm2 stop meraj-api",
    "pm2:restart": "pm2 restart meraj-api",
    "pm2:reload": "pm2 reload meraj-api",
    "pm2:logs": "pm2 logs meraj-api",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/ioredis": "^4.28.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^7.0.3",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
